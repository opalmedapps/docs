{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
  ],
  "assignees": ["mschoettle"],
  "labels": ["dependencies"],
  "packageRules": [
    // Combine mkdocs-material updates for Python and Docker
    {
      "matchPackagePatterns": ["mkdocs-material"],
      "groupName": "mkdocs-material",
      // Restrict to weekly updates
      "schedule": [
        "before 12pm on Monday",
      ],
    },
    // Allow to receive patch updates for certain packages while waiting with upgrading to the next minor version
    {
      "matchFiles": ["versions.Dockerfile"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "",
      "separateMinorPatch": true,
    },
  ],
  // update node only to LTS versions
  // see: https://github.com/renovatebot/renovate/discussions/14909
  "regexManagers": [
		{
			"fileMatch": ["versions.Dockerfile$"],
			"matchStrings": ["FROM node:(?<currentValue>.*?)-alpine([\d\.]+)\\n"],
			"depNameTemplate": "node",
			"datasourceTemplate": "node",
			"versioningTemplate": "node"
		}
	],
}
